<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
    <%- include('partials/header.ejs') %>

    <section class="posts-area">
      <div class="text-part">
        <h1>Postagens</h1>
        <% posts.forEach((item) => { %>
        <blockquote>
          <h4><%= item.title %></h4>
          <%= item.body %>
          <span class="author"><i><%= item.name%></i></span>
          <% if(item.stars) { %> <% for( let index = 0; index < item.stars;
          index++ ) { %>
          <img src="/image/star-svgrepo-com.svg" alt="start" />
          <% } %> <% } %>
        </blockquote>
        <% }) %>
      </div>
    </section>

    <%- include('partials/scripts.ejs') %>
  </body>
</html>
